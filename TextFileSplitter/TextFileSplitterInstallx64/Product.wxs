<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <?define ProductVersion = "1.0.11.0"?>
  <?define UpgradeCode = "A9EE6818-88C5-4E7F-A2E4-C7BC52E7FF8D"?>
  <?define Manufacturer = "Keith Martin"?>
  <?define PackageCode = "*"?>
  
  <Product Id="*" 
           Name="Text File Splitter x64" 
           Language="1033" 
           Version="$(var.ProductVersion)" 
           Manufacturer="$(var.Manufacturer)" 
           UpgradeCode="$(var.UpgradeCode)">
    
    <Package Id="$(var.PackageCode)"
             Description="Text File Splitter SSIS Source Component"
             Comments="Installs the dll's required for this component to work."
             InstallerVersion="300" 
             Manufacturer="$(var.Manufacturer)" 
             Compressed="yes" 
             InstallScope="perMachine" />

    <Media Id="1" Cabinet="TextFileSplitter.cab" EmbedCab="yes" />
    
    <MajorUpgrade
      Schedule="afterInstallInitialize"
      DowngradeErrorMessage="A later version of [ProductName] is already installed. Setup will now exit."/>

    <UIRef Id="WixUI_FeatureTree"/>
    <WixVariable Id="WixUILicenseRtf" Value="$(var.TextFileSplitter2012.ProjectDir)\License.rtf" />

    <Property Id="SSIS64_2012_PATH">
      <RegistrySearch Type="directory" Id="SSIS64_2012_PATH" Root="HKLM" Key="SOFTWARE\Microsoft\Microsoft SQL Server\110\SSIS\Setup\DTSPath" Win64="yes"/>
    </Property>
    <Property Id="SSIS32_2012_PATH">
      <RegistrySearch Type="directory" Id="SSIS32_2012_PATH" Root="HKLM" Key="SOFTWARE\Microsoft\Microsoft SQL Server\110\SSIS\Setup\DTSPath" Win64="no"/>
    </Property>
    <Property Id="SSIS64_2008_PATH">
      <RegistrySearch Type="directory" Id="SSIS64_2008_PATH" Root="HKLM" Key="SOFTWARE\Microsoft\Microsoft SQL Server\100\SSIS\Setup\DTSPath" Win64="yes"/>
    </Property>
    <Property Id="SSIS32_2008_PATH">
      <RegistrySearch Type="directory" Id="SSIS32_2008_PATH" Root="HKLM" Key="SOFTWARE\Microsoft\Microsoft SQL Server\100\SSIS\Setup\DTSPath" Win64="no"/>
    </Property>

    <Property Id="SSIS64_2012">
      <RegistrySearch Type="raw" Id="SSIS64_2012" Root="HKLM" Key="SOFTWARE\Microsoft\Microsoft SQL Server\110\DTS\Setup" Name="ProductID" Win64="yes"/>
    </Property>

    <Property Id="SSIS32_2012">
      <RegistrySearch Type="raw" Id="SSIS32_2012" Root="HKLM" Key="SOFTWARE\Microsoft\Microsoft SQL Server\110\DTS\Setup" Name="ProductID" Win64="no"/>
    </Property>

    <Property Id="SSIS64_2008">
      <RegistrySearch Type="raw" Id="SSIS64_2008" Root="HKLM" Key="SOFTWARE\Microsoft\Microsoft SQL Server\100\DTS\Setup" Name="ProductID" Win64="yes"/>
    </Property>

    <Property Id="SSIS32_2008">
      <RegistrySearch Type="raw" Id="SSIS32_2008" Root="HKLM" Key="SOFTWARE\Microsoft\Microsoft SQL Server\100\DTS\Setup" Name="ProductID" Win64="no"/>
    </Property>


    <!-- We need to find either or both a 32 or 64 bit install of SSIS 2008 or 2012. -->
    <Condition Message="SQL Server Integration Services is not installed on this computer.  Please install SQL Server Integration Services before running this installer.">
      Installed OR SSIS64_2012 OR SSIS32_2012 OR SSIS64_2008 OR SSIS32_2008
    </Condition>

    <Condition Message="You need to be an administrator to install this product.">
      Privileged
    </Condition>

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Component Id="FileHelperLibrary" Guid="25D5591A-397A-47F9-9473-5D6A1248D138">
        <File Id="FileHelperDLLGac" Name="$(var.FileHelpers.TargetFileName)" Source="$(var.FileHelpers.TargetPath)" Assembly=".net" KeyPath="yes" Checksum="yes"/>
      </Component>

      <Component Id="SQL2012GAC" Guid="03F16F6D-7013-4EAB-995C-BC3059659DC3">
        <File Id="SQL2012DLLGAC" Name="$(var.TextFileSplitter2012.TargetFileName)" Source="$(var.TextFileSplitter2012.TargetPath)" Assembly=".net" KeyPath="yes" Checksum="yes"/>
      </Component>

      <Component Id="SQL2008GAC" Guid="C2A15C13-01DE-4BC7-B9D8-7B3AA6F5F367">
        <File Id="SQL2008DLLGAC" Name="$(var.TextFileSplitter2008.TargetFileName)" Source="$(var.TextFileSplitter2008.TargetPath)" Assembly=".net" KeyPath="yes" Checksum="yes"/>
      </Component>


      <Directory Id="SSIS64_2012_PATH" Name="SSIS64_2012_PATH">
        <Directory Id="SQL2012x64Pipeline" Name="PipelineComponents">
          <Component Id="SQL2012x64DLL" Guid="9F413B6A-6B5B-4384-8155-D9BE2AFADD66" Win64="yes">
            <File Id="SQL2012x64DLLFile" Name="$(var.TextFileSplitter2012.TargetFileName)" Source="$(var.TextFileSplitter2012.TargetPath)"  Checksum="yes"/>
          </Component>
        </Directory>
        <Directory Id="SQL2012x64Upgrade" Name="UpgradeMappings">
          <Component Id="SQL2012x64UpgradeMapping" Guid="17C57F1E-EABE-42E3-BFF8-F565DE98F5AA" Win64="yes">
            <File Id="SQL2012x64UpgradeFile" Name="TextFileSplitter.xml" Source="$(var.TextFileSplitter2012.ProjectDir)\TextFileSplitter.xml" Checksum="yes"/>
          </Component>
        </Directory>
      </Directory>

      <Directory Id="SSIS32_2012_PATH" Name="SSIS32_2012_PATH">
        <Directory Id="SQL2012x32Pipeline" Name="PipelineComponents">
          <Component Id="SQL2012x32DLL" Guid="11CAEB1C-E1A7-4D7C-BC33-C3E003D1D6F6" Win64="no">
            <File Id="SQL2012x32DLLFile" Name="$(var.TextFileSplitter2012.TargetFileName)" Source="$(var.TextFileSplitter2012.TargetPath)"  Checksum="yes"/>
          </Component>
        </Directory>
        <Directory Id="SQL2012x32Upgrade" Name="UpgradeMappings">
          <Component Id="SQL2012x32UpgradeMapping" Guid="00B931D6-C589-4C81-8D4F-9B4B38A31B78" Win64="no">
            <File Id="SQL2012x32UpgradeFile" Name="TextFileSplitter.xml" Source="$(var.TextFileSplitter2012.ProjectDir)\TextFileSplitter.xml" Checksum="yes"/>
          </Component>
        </Directory>
      </Directory>

      <Directory Id="SSIS64_2008_PATH" Name="SSIS64_2008_PATH">
        <Directory Id="SQL2008x64Pipeline" Name="PipelineComponents">
          <Component Id="SQL2008x64DLL" Guid="A95E0ADB-3A10-48E5-98B5-4DCEF04C7E69" Win64="yes">
            <File Id="SQL2008x64DLLFile" Name="$(var.TextFileSplitter2008.TargetFileName)" Source="$(var.TextFileSplitter2008.TargetPath)"  Checksum="yes"/>
          </Component>
        </Directory>
      </Directory>

      <Directory Id="SSIS32_2008_PATH" Name="SSIS32_2008_PATH">
        <Directory Id="SQL2008x32Pipeline" Name="PipelineComponents">
          <Component Id="SQL2008x32DLL" Guid="2F66CDAC-39E1-49AD-B7DB-E6EDCD4E32CC" Win64="no">
            <File Id="SQL2008x32DLLFile" Name="$(var.TextFileSplitter2008.TargetFileName)" Source="$(var.TextFileSplitter2008.TargetPath)"  Checksum="yes"/>
          </Component>
        </Directory>
      </Directory>
    </Directory>

    <Feature Id="Complete" Level="1" Title="Text File Splitter Installer 1.0" Description="An SSIS Component to split Delimted Text files" Display="expand">
      <Feature Id="SQL2012" Level="1" Title="SQL 2012">
        <Feature Id="SQL2012x64" Level="1" Title="x64">
          <ComponentRef Id="SQL2012x64DLL"/>
          <ComponentRef Id="SQL2012x64UpgradeMapping"/>
          <Condition Level="0">NOT SSIS64_2012</Condition>
        </Feature>
        <Feature Id="SQL2012x32" Level="1" Title="x86">
          <ComponentRef Id="SQL2012x32DLL"/>
          <ComponentRef Id="SQL2012x32UpgradeMapping"/>
          <Condition Level="0">NOT SSIS32_2012</Condition>
        </Feature>
        <ComponentRef Id="SQL2012GAC" />
        <Condition Level="0">NOT (SSIS32_2012 OR SSIS64_2012)</Condition>
      </Feature>
      <Feature Id="SQL2008" Level="1" Title="SQL 2008">
        <Feature Id="SQL2008x64" Level="1" Title="x64">
          <ComponentRef Id="SQL2008x64DLL"/>
          <Condition Level="0">NOT SSIS64_2008</Condition>
        </Feature>
        <Feature Id="SQL2008x32" Level="1" Title="x86">
          <ComponentRef Id="SQL2008x32DLL"/>
          <Condition Level="0">NOT SSIS32_2008</Condition>
        </Feature>
        <ComponentRef Id="SQL2008GAC" />
        <Condition Level="0">NOT (SSIS32_2008 OR SSIS64_2008)</Condition>
      </Feature>
      <Feature Id="FileHelper" Level="1" Title="FileHelper DLL (required)">
        <ComponentRef Id="FileHelperLibrary"/>
      </Feature>
    </Feature>
    
  </Product>
</Wix>